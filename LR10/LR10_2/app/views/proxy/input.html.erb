<%= form_tag  url_for(controller: :proxy, action: :output), method: 'get' do %>
  <label>Enter Natural Number:</label>
  <input type = "number" pattern = "^[\d]+$" name = "val" id = "val" 10 />
  <div>
    <label>To processing on side</label>
    <select class="custom-select" name = "side">
      <option value = "server">Server XSLT</option>
      <option value = "client-with-xslt">Client XSLT</option>
      <option value = "client">RAW</option>
    </select>
  </div>
  <br>
  <input type="submit" class = "btn btn-primary" value="Найти палиндром"/>
<% end %>
