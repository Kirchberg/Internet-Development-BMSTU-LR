<!DOCTYPE html>
<html>
<head>
  <title>LR12 Work</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #e3f2fd;">
  <a class="navbar-brand" href="#">Palindrome App</a>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <span class="navbar-text">
          <% if current_user %>
            You have entered as: <%= current_user.username %>
        </span>
      </li>
    </ul>
    <a class="navbar-brand" href='/logout'>Log out</a>
  </div>
  <% else %>
    <a class="navbar-brand" href="/login">Sign In</a>
    <a class="navbar-brand" href="/signup">Sign Up</a>
  <% end %>
  </nav>

  <div class="row justify-content-center">
    <div class="col-sm-10" id="error-msg">
      <%flash.each do |name, msg|%>
        <div class="alert alert-<%=name%>">
          <%= msg %>
        </div>
      <% end %>
    </div>
  </div>
  <script>
    $(document).ready(function() {
      setTimeout(function() {
        $('#error-msg').fadeOut('slow', function() {
          $(this).remove();
        })
      }, 4500);
    });
  </script>
  <%= yield %>
</body>
</html>
